  "motion": {
    "duration": {
      "fast": {
        "$type": "duration",
        "$value": "150ms"
      },
      "normal": {
        "$type": "duration",
        "$value": "250ms"
      },
      "slow": {
        "$type": "duration",
        "$value": "400ms"
      }
    },
    "easing": {
      "in": {
        "$type": "cubicBezier",
        "$value": [0.4, 0, 1, 1]
      },
      "out": {
        "$type": "cubicBezier",
        "$value": [0, 0, 0.2, 1]
      },
      "inOut": {
        "$type": "cubicBezier",
        "$value": [0.4, 0, 0.2, 1]
      }
    }
  },
  
